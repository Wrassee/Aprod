{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "rootDir": ".", // <-- EZ A FONTOS KIEGÉSZÍTÉS
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "./shared/*"
      ]
    }
  },
  "include": [
    "server/**/*.ts",
    "api/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}